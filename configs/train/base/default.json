{
  "experiment_id": "default",
  
  "data": {
    "audio_folder": "./data/audio",
    "config": "./configs/architecture/base/overfit.json"
  },
  
  "training": {
    "batch_size": 4,
    "grad_accum_steps": 4,
    "epochs": 10000,
    "learning_rate": 1e-4,
    "warmup_steps": 0,
    "unconditional_frac": 0.5
  },
  
  "output": {
    "output_dir": "./outputs",
    "run_name": "default_run",
    "save_every": 300
  },
  
  "eval": {
    "eval_every_epochs": 10,
    "demo_every_epochs": 100
  },
  
  "flags": {
    "scratch": true,
    "tag_no_shuffle": false,
    "use_sliding_window": true
  }
}

